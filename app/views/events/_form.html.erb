<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
  
        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :タイトル %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :本文 %>
      <%= form.text_area :content %>
    </div>
  
    <div class="field">
      <%= form.label :日にち %>
      <%= form.date_field :start_at ,default: Date.today %>〜
      
      <%= form.date_field :end_at ,default: Date.today %>
    </div>

    <div class="field">
    <%= form.label :状態 %>
    <%= form.number_field :status %>
  </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  