<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
  
        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
  
    <div class="field">
      <%= form.label :status %>
      <%= form.number_field :status %>
    </div>
  
    <div class="field">
      <%= form.label :start_at %>
      <%= date_select :start_at, Date.today, use_month_numbers: true %>
      <%= form.datetime_select :start_at, {default: Date.today + 0.hour}, class: 'form-control form-control-inline' %>
    </div>
  
    <div class="field">
      <%= form.label :end_at %>
      <%= form.datetime_select :end_at, {default: Date.today + 0.hour}, class: 'form-control form-control-inline' %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  